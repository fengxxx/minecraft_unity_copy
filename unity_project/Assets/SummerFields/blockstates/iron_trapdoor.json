{
    "multipart": [
        {   "when": { "open": "false", "half": "bottom" },
            "apply": { "model": "iron_trapdoor_bottom" }
        },
        {   "when": { "open": "false", "half": "top" },
            "apply": { "model": "iron_trapdoor_top" }
        },
        {   "when": { "open": "true", "facing": "north" },
            "apply": { "model": "iron_trapdoor_open" }
        },
        {   "when": { "open": "true", "facing": "south" },
            "apply": { "model": "iron_trapdoor_open", "y": 180 }
        },
        {   "when": { "open": "true", "facing": "east" },
            "apply": { "model": "iron_trapdoor_open", "y": 90 }
        },
        {   "when": { "open": "true", "facing": "west" },
            "apply": { "model": "iron_trapdoor_open", "y": 270 }
        }
    ]
}